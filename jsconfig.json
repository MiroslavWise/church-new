{
        "compilerOptions": {
          "target": "es2017",
          "lib": [
            "dom",
            "dom.iterable",
            "esnext"
          ],
          "module": "esnext",
          "moduleResolution": "node",
          "jsx": "react-jsx",
          "baseUrl": "./src",
          "allowSyntheticDefaultImports": true,
          "strict": true,
          "forceConsistentCasingInFileNames": true,
          "noFallthroughCasesInSwitch": true,
          "resolveJsonModule": true,
          "isolatedModules": true,
          "noEmit": true
        },
        "include": [
          "src",
          "node_modules/@types/jest/index.d.ts"
        ]
      }